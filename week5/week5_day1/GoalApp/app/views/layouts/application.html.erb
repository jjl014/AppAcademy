<!DOCTYPE html>
<html>
  <head>
    <title>GoalApp</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <header>
      <h1>Goal App</h1>
      <% if logged_in? %>
      <%= current_user.username %>
      <%= button_to "Sign Out", session_url, method: :delete %>
      <% else %>
      <%= link_to "Log In", new_session_url %>
      <%= link_to "Sign Up", new_user_url %>
      <% end %>
    </header>
    <%= yield %>
  </body>
</html>
