<h2>New Tweet!</h2>
<form class="tweet-compose" action="/tweets" method="POST">
  <input
      type="hidden"
      name="authenticity_token"
      value="<%= form_authenticity_token %>">

  <label>
    Content
    <textarea name="tweet[content]" maxlength="140"></textarea>
  </label>
  <br>
  <strong></strong>
  <br>

  <!-- <label> -->
    <a href="#" class="add-mentioned-user">Add Mention</a>
    <div class="mentioned-users"></div>

    <script type="text/template">
    <select name="tweet[mentioned_user_ids][]">
      <option></option>
      <% User.all.each do |user| %>
        <option value="<%= user.id %>"><%= user.username %></option>
      <% end %>
    </select>
    </script>
  <!-- </label> -->
  <br>

  <input type="Submit" value="Post Tweet!">
</form>
