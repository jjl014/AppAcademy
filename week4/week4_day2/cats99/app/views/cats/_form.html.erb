<% action = cat.persisted? ? cat_url(cat) : cats_url %>
<% method = cat.persisted? ? "PATCH" : "POST" %>

<form action="<%= action %>" method="post">
  <input type="hidden" name="_method" value="<%=method%>">

  <label for="name">Name</label>
  <input id="name" type="text" name="cat[name]" value="<%= cat.name %>">

  <br><br>

  <input id='male' type="radio" name="cat[sex]" value="M"
  <%= cat.sex == "M" ? 'checked' : ""%> >
  <label for="male">Male</label>
  <input id='female' type="radio" name="cat[sex]" value="F"
  <%= cat.sex == 'F' ? 'checked' : "" %> >
  <label for="female">Female</label>

  <br><br>

  <label for="color">Color</label>
  <select id="color" name="cat[color]">
    <option disabled <%= cat.color ? "" : "selected" %> >Please select color</option>
    <% Cat.colors.each do |color| %>
      <option value="<%= color %>" <%= cat.color == color ? 'selected' : "" %> >
        <%= color.capitalize %>
      </option>
    <% end %>
  </select>

  <br><br>

  <label for="birth_date">Birth Date</label>
  <input id="birth_date" type="date" name="cat[birth_date]" value="<%= cat.birth_date ? cat.birth_date : ""%>">

  <br><br>

  <label for="desc">Description</label>
  <br>
  <textarea id="desc" name="cat[description]"><%= cat.description %></textarea>

  <br><br>

  <% submit_text = (cat.persisted? ? 'Update' : 'Create') + ' cat!' %>
  <input type="submit" value="<%= submit_text %>">
</form>
